<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/grayBoardBg"
    android:orientation="vertical"
    tools:context="puzzleleaf.tistory.com.miniproject1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_common_lr_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_common_lr_margin"
            android:layout_marginRight="@dimen/activity_common_lr_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유태양"
                android:textColor="#5e5e5e"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reply_contents"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="asd"
                android:textColor="#5e5e5e" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>